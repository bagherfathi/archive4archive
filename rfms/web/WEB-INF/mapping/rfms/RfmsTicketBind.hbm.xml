<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.ft.rfms.entity">
	<class
		name="RfmsTicketBind"
		table="RFMS_TICKET_BIND"  lazy="false"
	>
		<meta attribute="sync-DAO">true</meta>

		<id
			name="bindId"
			type="java.lang.Long"
			column="BIND_ID"
		>
			<generator class="sequence">
			    <param name="sequence">RFMS.RFMS_TICKET_BIND_SEQ</param>
			</generator>
		</id>
		
		<property
			name="ticketId"
			column="TICKET_ID"
			type="java.lang.Long"
			not-null="false"
			length="14"
		/>
		<property
			name="posCode"
			column="POS_CODE"
			type="java.lang.String"
			not-null="false"
			length="32"
		/>
		<property
			name="createDate"
			column="CREATE_DATE"
			type="date"
			not-null="false"
			length="14"
		/>
		<property
			name="updateDate"
			column="UPDATE_DATE"
			type="date"
			not-null="false"
			length="14"
		/>


	</class>	
</hibernate-mapping>