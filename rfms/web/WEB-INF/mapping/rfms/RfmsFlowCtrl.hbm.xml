<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.ft.rfms.entity">
	<class
		name="RfmsFlowCtrl"
		table="RFMS_FLOW_CTRL" schema="RFMS" lazy="false"
	>
		<meta attribute="sync-DAO">true</meta>
		<id
			name="flowCtrlId"
			type="java.lang.Long"
			column="FLOW_CTRL_ID"
		>
			<generator class="sequence">
			    <param name="sequence">RFMS.RFMS_FLOW_CTRL_SEQ</param>
			</generator>
		</id>

		<property
			name="roleId"
			column="ROLE_ID"
			type="java.lang.Long"
			not-null="false"
			length="14"
		/>
		<property
			name="statusBefore"
			column="STATUS_BEFORE"
			type="java.lang.Long"
			not-null="false"
			length="2"
		/>
		<property
			name="statusAfter"
			column="STATUS_AFTER"
			type="java.lang.Long"
			not-null="false"
			length="2"
		/>
		<property
			name="flowStep"
			column="FLOW_STEP"
			type="java.lang.Long"
			not-null="false"
			length="4"
		/>
		<property
			name="nextFlow"
			column="NEXT_FLOW"
			type="java.lang.Long"
			not-null="false"
			length="14"
		/>
		<property
			name="flowRemark"
			column="FLOW_REMARK"
			type="string"
			not-null="false"
			length="1024"
		/>


	</class>	
</hibernate-mapping>