<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.ft.sm.entity" >
	<class
		name="Organization"
		table="SM_ORGANIZATION"
		schema="RFMS"
		lazy="false"
	>
		<id
			name="orgId"
			type="long"
			column="ORG_ID"
		>
			<generator class="increment"/>
		</id>

		<property
			name="orgType"
			column="ORG_TYPE"
			type="long"
			not-null="false"
			length="2"
		/>
		<property
			name="orgName"
			column="ORG_NAME"
			type="java.lang.String"
			not-null="false"
			length="64"
		/>
		<property
			name="orgCode"
			column="ORG_CODE"
			type="java.lang.String"
			not-null="false"
			length="32"
		/>
		<property
			name="parentId"
			column="PARENT_ID"
			type="long"
			not-null="false"
			length="14"
		/>
		<property
			name="regionId"
			column="REGION_ID"
			type="long"
			not-null="false"
			length="14"
		/>
		<property
			name="orgPath"
			column="ORG_PATH"
			type="java.lang.String"
			not-null="false"
			length="255"
		/>
		<property
			name="modifyTime"
			column="MODIFY_TIME"
			type="java.util.Date"
			not-null="false"
			length="7"
		/>
		<property
			name="createTime"
			column="CREATE_TIME"
			type="java.util.Date"
			not-null="false"
			length="7"
		/>
		<property
			name="orgDesc"
			column="ORG_DESC"
			type="java.lang.String"
			not-null="false"
			length="255"
		/>
		<property
			name="status"
			column="STATUS"
			type="long"
			not-null="false"
			length="2"
		/>
		<property
			name="linkName"
			column="LINK_NAME"
			type="java.lang.String"
			not-null="false"
			length="64"
		/>
		<property
			name="address"
			column="ADDRESS"
			type="java.lang.String"
			not-null="false"
			length="255"
		/>
		<property
			name="mobilePhone"
			column="MOBILE_PHONE"
			type="java.lang.String"
			not-null="false"
			length="32"
		/>
		<property
			name="telePhone"
			column="TELE_PHONE"
			type="java.lang.String"
			not-null="false"
			length="32"
		/>
		<property
			name="postcode"
			column="POSTCODE"
			type="java.lang.String"
			not-null="false"
			length="12"
		/>
		<property
			name="managerId"
			column="MANAGER_ID"
			type="long"
			not-null="false"
			length="14"
		/>
		<property
			name="selfBalance"
			column="SELF_BALANCE"
			type="long"
			not-null="false"
			length="2"
		/>
		<property
			name="ssoCode"
			column="SSO_CODE"
			type="java.lang.String"
			not-null="false"
			length="32"
		/>
		<property
			name="parentSsoCode"
			column="PARENT_SSO_CODE"
			type="java.lang.String"
			not-null="false"
			length="32"
		/>


	</class>	
</hibernate-mapping>
