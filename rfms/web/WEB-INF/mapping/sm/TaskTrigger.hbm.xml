<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.ft.sm.entity" >
	<class
		name="TaskTrigger"
		table="SM_TASK_TRIGGER"
		schema="RFMS"
		lazy="false"
	>
		<id
			name="triggerId"
			type="long"
			column="TRIGGER_ID"
		>
			<generator class="increment"/>
		</id>

		<property
			name="jobId"
			column="JOB_ID"
			type="long"
			not-null="false"
			length="14"
		/>
		<property
			name="triggerCron"
			column="TRIGGER_CRON"
			type="java.lang.String"
			not-null="false"
			length="255"
		/>
		<property
			name="triggerCrontype"
			column="TRIGGER_CRONTYPE"
			type="long"
			not-null="false"
			length="4"
		/>
		<property
			name="triggerDesc"
			column="TRIGGER_DESC"
			type="java.lang.String"
			not-null="false"
			length="255"
		/>
		<property
			name="triggerStatus"
			column="TRIGGER_STATUS"
			type="long"
			not-null="false"
			length="4"
		/>
		<property
			name="triggerStart"
			column="TRIGGER_START"
			type="long"
			not-null="false"
			length="2"
		/>


	</class>	
</hibernate-mapping>
