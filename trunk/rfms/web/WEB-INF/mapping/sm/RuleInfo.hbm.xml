<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.ft.sm.entity" >
	<class
		name="RuleInfo"
		table="SM_RULE_INFO"
		
		lazy="false"
	>
		<id
			name="ruleId"
			type="long"
			column="RULE_ID"
		>
			<generator class="increment"/>
		</id>

		<property
			name="categoryId"
			column="CATEGORY_ID"
			type="long"
			not-null="false"
			length="14"
		/>
		<property
			name="ruleName"
			column="RULE_NAME"
			type="java.lang.String"
			not-null="false"
			length="64"
		/>
		<property
			name="ruleCode"
			column="RULE_CODE"
			type="java.lang.String"
			not-null="false"
			length="32"
		/>
		<property
			name="ruleDesc"
			column="RULE_DESC"
			type="java.lang.String"
			not-null="false"
			length="255"
		/>
		<property
			name="publishVersion"
			column="PUBLISH_VERSION"
			type="long"
			not-null="false"
			length="4"
		/>
		<property
			name="type"
			column="TYPE"
			type="long"
			not-null="false"
			length="2"
		/>
		<property
			name="ruleFileId"
			column="RULE_FILE_ID"
			type="long"
			not-null="false"
			length="14"
		/>
		<property
			name="appId"
			column="APP_ID"
			type="long"
			not-null="false"
			length="14"
		/>
		<property
			name="createDate"
			column="CREATE_DATE"
			type="java.util.Date"
			not-null="false"
			length="7"
		/>
		<property
			name="validDate"
			column="VALID_DATE"
			type="java.util.Date"
			not-null="false"
			length="7"
		/>
		<property
			name="expireDate"
			column="EXPIRE_DATE"
			type="java.util.Date"
			not-null="false"
			length="7"
		/>
		<property
			name="updateDate"
			column="UPDATE_DATE"
			type="java.util.Date"
			not-null="false"
			length="7"
		/>
		<property
			name="operatorId"
			column="OPERATOR_ID"
			type="long"
			not-null="false"
			length="14"
		/>
		<property
			name="orgId"
			column="ORG_ID"
			type="long"
			not-null="false"
			length="14"
		/>
		<property
			name="loginOrgId"
			column="LOGIN_ORG_ID"
			type="long"
			not-null="false"
			length="14"
		/>


	</class>	
</hibernate-mapping>
